{
  "app-id": "com.temidaradev.rusic",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "rusic-wrapper.sh",
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=x11",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=network",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.portal.Desktop",
    "--filesystem=xdg-music:ro",
    "--filesystem=xdg-run/pipewire-0",
    "--filesystem=xdg-run/bus",
    "--filesystem=/tmp",
    "--filesystem=xdg-run/wayland-0",
    "--talk-name=org.a11y.Bus",
    "--metadata=X-D-Bus-Proxy=--talk-name=org.freedesktop.portal.*",
    "--env=WEBKIT_DISABLE_SANDBOX_THIS_IS_DANGEROUS=1",
    "--env=WEBKIT_DISABLE_COMPOSITING_MODE=1",
    "--env=WEBKIT_DISABLE_DMABUF_RENDERER=1"
  ],
  "modules": [
    {
      "name": "xdotool",
      "buildsystem": "simple",
      "build-commands": [
        "make PREFIX=/app",
        "make install PREFIX=/app",
        "ln -s libxdo.so.4 /app/lib/libxdo.so.3"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/jordansissel/xdotool/releases/download/v4.20251130.1/xdotool-4.20251130.1.tar.gz",
          "sha256": "eee789b00d6a13d47b31bbc139727e6408c21b5f6ba5e804fdf6ecfb8c781356"
        }
      ]
    },
    {
      "name": "rusic",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 target/dx/rusic/release/linux/app/rusic -t /app/bin/",
        "install -Dm755 data/rusic-wrapper.sh -t /app/bin/",
        "cp -r target/dx/rusic/release/linux/app/assets /app/bin/",
        "install -Dm644 data/com.temidaradev.rusic.desktop -t /app/share/applications/",
        "install -Dm644 data/com.temidaradev.rusic.metainfo.xml -t /app/share/metainfo/",
        "install -Dm644 assets/logo.png /app/share/icons/hicolor/scalable/apps/com.temidaradev.rusic.png"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}